<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stock Portfolio Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container my-4">
    <h1 class="text-center mb-4">Stock Portfolio Tracker</h1>
    
    <!-- Portfolio Summary -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Portfolio Summary</h4>
            <button id="refresh-prices" class="btn btn-light btn-sm">
              <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-3 col-6">
                <p class="mb-2"><strong>Cash Balance:</strong></p>
                <h4 id="cash-balance" class="mb-3">$0.00</h4>
                
                <p class="mb-2"><strong>Total Invested:</strong></p>
                <h4 id="total-invested" class="mb-3">$0.00</h4>
              </div>
              <div class="col-md-3 col-6">
                <p class="mb-2"><strong>Current Value:</strong></p>
                <h4 id="total-value" class="mb-3">$0.00</h4>
                
                <p class="mb-2"><strong>Gain/Loss:</strong></p>
                <h4 class="mb-3">
                  <span id="total-gain-loss">$0.00</span> 
                  <span id="total-gain-loss-percent" class="text-muted fs-6">(0.00%)</span>
                </h4>
              </div>
              <div class="col-md-3 col-6">
                <p class="mb-2"><strong>Total Portfolio Value:</strong></p>
                <h4 id="total-portfolio-value" class="mb-3">$0.00</h4>
              </div>
              <div class="col-md-3 col-6 text-md-end">
                <p class="mb-2"><strong>Last Updated:</strong></p>
                <p class="last-refreshed-time mb-3">Never</p>
              </div>
            </div>
            
            <!-- Cash Management -->
            <div class="row mt-3">
              <div class="col-12">
                <div class="input-group">
                  <input type="text" id="cash-amount" class="form-control" placeholder="Enter amount">
                  <button id="add-cash" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Add Cash
                  </button>
                  <button id="withdraw-cash" class="btn btn-danger">
                    <i class="bi bi-dash-circle me-1"></i> Withdraw
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Portfolio Table Card -->
    <div class="card mb-4">
      <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h3 class="mb-0 fs-4">Portfolio</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover" id="portfolio-table">
            <thead>
              <tr>
                <th>Ticker</th>
                <th>Shares</th>
                <th class="hide-xs">Avg Cost</th>
                <th>Current</th>
                <th>Value</th>
                <th>Gain/Loss</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td colspan="6" class="text-center">Loading...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <!-- Trade Form Card - Second (between Portfolio and Trades) -->
    <div class="card mb-4">
      <div class="card-header bg-light">
        <h3 class="mb-0 fs-4">Add Trade</h3>
      </div>
      <div class="card-body">
        <form id="trade-form">
          <div class="row g-3">
            <div class="col-md-3 col-sm-6">
              <label for="ticker" class="form-label">Ticker Symbol</label>
              <input type="text" class="form-control" id="ticker" name="ticker" placeholder="e.g., AAPL" required>
            </div>
            <div class="col-md-3 col-sm-6">
              <label for="quantity" class="form-label">Quantity</label>
              <input type="text" class="form-control" id="quantity" name="quantity" placeholder="Number of shares" required>
            </div>
            <div class="col-md-3 col-sm-6">
              <label for="purchase-price" class="form-label">Purchase Price</label>
              <input type="text" class="form-control" id="purchase-price" name="purchasePrice" placeholder="Price per share" required>
            </div>
            <div class="col-md-3 col-sm-6">
              <label for="purchase-date" class="form-label">Purchase Date</label>
              <input type="date" class="form-control" id="purchase-date" name="purchaseDate" required>
            </div>
          </div>
          <div class="mt-3">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-plus-circle me-1"></i> Add Trade
            </button>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Trades Card - Third -->
    <div class="card mb-4">
      <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h3 class="mb-0 fs-4">Trades</h3>
        <div>
          <button id="reset-button" class="btn btn-outline-danger btn-sm">
            <i class="bi bi-trash me-1"></i> Reset All
          </button>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover" id="trades-table">
            <thead>
              <tr>
                <th>Ticker</th>
                <th>Shares</th>
                <th>Buy Price</th>
                <th class="hide-xs">Date</th>
                <th>Current</th>
                <th>Gain/Loss</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td colspan="7" class="text-center">Loading...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <!-- Cash Balance Card - Fourth (at bottom) -->
    <div class="card mb-4">
      <div class="card-header bg-light">
        <h3 class="mb-0 fs-4">Cash Management</h3>
      </div>
      <div class="card-body">
        <div class="row g-4">
          <div class="col-md-6 col-sm-12">
            <div class="card h-100">
              <div class="card-body text-center">
                <h5 class="card-title">Current Cash Balance</h5>
                <p class="card-text fs-4 cash-balance-display">$0.00</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-sm-12">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">Add or Withdraw Cash</h5>
                <div class="input-group mb-3">
                  <input type="text" id="cash-amount-alt" class="form-control" placeholder="Enter amount">
                  <button id="add-cash-alt" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>
                  </button>
                  <button id="withdraw-cash-alt" class="btn btn-danger">
                    <i class="bi bi-dash-circle"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Reset Button -->
    <div class="text-center mb-4">
      <button id="reset-data" class="btn btn-danger">Reset All Data</button>
    </div>
  </div>
  
  <!-- Sell Modal -->
  <div class="modal fade" id="sellModal" tabindex="-1" aria-labelledby="sellModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="sellModalLabel">Sell Shares</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="sell-trade-id">
          <div class="mb-3">
            <label for="sell-ticker" class="form-label">Ticker</label>
            <input type="text" class="form-control" id="sell-ticker" readonly>
          </div>
          <div class="mb-3">
            <label for="sell-quantity" class="form-label">Quantity to Sell</label>
            <input type="number" class="form-control" id="sell-quantity" min="1">
          </div>
          <div class="mb-3">
            <label for="sell-price" class="form-label">Sell Price</label>
            <input type="number" class="form-control" id="sell-price" step="0.01" min="0.01">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="confirm-sell">Sell</button>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html> 